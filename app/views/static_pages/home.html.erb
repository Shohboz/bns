<div class="col-lg-12 container-alert">
	<% flash.each do |name, msg| %>
	  <% if msg.is_a?(String) %>
	    <div class="alert col-lg-10 center-block special-alert alert-<%= name.to_s == 'notice' ? 'info' : 'danger' %>">
	      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	      <%= content_tag :div, msg, :id => "flash_#{name}" %>
	    </div>
	  <% end %>
	<% end %>
</div>

